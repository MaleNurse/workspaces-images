#!/bin/bash

SCRIPT_PATH="$( cd "$(dirname "$0")" ; pwd -P )"
SCRIPT_PATH="$(realpath $SCRIPT_PATH)"
cd $(dirname "${SCRIPT_PATH}")

if [ "$1" == "kasmweb" ]
then
  sudo docker build --pull --no-cache -t kasmweb/jupyter:dev \
                    -f kasm-jupyter.Dockerfile .
else
  sudo docker build --pull --no-cache -t doctorwhen/kasm:jupyter \
                    -f kasm-jupyter.Dockerfile .
fi

#!/bin/bash

SCRIPT_PATH="$( cd "$(dirname "$0")" ; pwd -P )"
SCRIPT_PATH="$(realpath $SCRIPT_PATH)"
cd $(dirname "${SCRIPT_PATH}")

if [ "$1" == "kasmweb" ]
then
  sudo docker build --no-cache -t kasmweb/jupyter-minimal:dev \
                    -f kasm-jupyter-minimal.Dockerfile .
else
  sudo docker build --no-cache -t doctorwhen/kasm:jupyter-minimal \
                    -f kasm-jupyter-minimal.Dockerfile .
fi

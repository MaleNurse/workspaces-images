# Kitty tabbed startup session
#
# Kitty tab with Neofetch
new_tab
launch --hold neofetch --kitty auto --source /home/kasm-user/.local/share/icons/hicolor/256x256/apps/ubuntu-jammy.png
enabled_layouts tall:bias=50;full_size=1
layout tall

new_tab
launch zsh
launch center-active-window
enabled_layouts tall:bias=50;full_size=1
layout tall

# Kitty tab for Ranger
new_tab Ranger
cd ~
launch zsh -c ranger
enabled_layouts tall:bias=50;full_size=1
layout tall

# Kitty tab for Btop++
new_tab Btop
launch zsh -c btop
enabled_layouts tall:bias=50;full_size=1
layout tall

# Kitty tabbed startup session
#
# Kitty tab with Neofetch
new_tab
launch --env SHELL="/bin/zsh" --hold zsh -c "neofetch --kitty auto --source /home/kasm-user/.local/share/icons/hicolor/256x256/apps/neovim-hicontrast.png"
enabled_layouts tall:bias=50;full_size=1
layout tall

# Kitty tab for Wing development
new_tab Wing
cd ~/Wing
launch zsh
launch center-active-window
enabled_layouts tall:bias=50;full_size=1
layout tall

# Kitty tab for Wing examples
new_tab Examples
cd ~/Wing/examples
launch zsh
enabled_layouts tall:bias=50;full_size=1
layout tall

# Kitty tab for Btop++
new_tab Btop
launch zsh -c btop
enabled_layouts tall:bias=50;full_size=1
layout tall

# Kitty tab for Cheat Sheets
new_tab Help
cd ~/Documents/cheat-sheets-plus/kasm
launch --env PAGER="less -r" ranger --selectfile=workspaces.md
enabled_layouts tall:bias=50;full_size=1
layout tall

#!/bin/bash
#
# This script can be ignored. It is used to prepare and sync Focal based user configuration
#
# Need to be in the install folder
SCRIPT_PATH="$( cd "$(dirname "$0")" ; pwd -P )"
SCRIPT_PATH="$(realpath $SCRIPT_PATH)"

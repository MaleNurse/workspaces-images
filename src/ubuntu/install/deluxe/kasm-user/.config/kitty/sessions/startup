# Kitty tabbed startup session
#
# Kitty tab with Neofetch
new_tab
launch --hold neofetch --kitty auto --source /home/kasm-user/.local/share/icons/hicolor/256x256/apps/neovim-hicontrast.png
launch center-active-window
enabled_layouts tall:bias=50;full_size=1
layout tall

# Kitty tab for Spiderfoot
new_tab SpiderFoot
cd ~/spiderfoot
launch zsh
enabled_layouts tall:bias=50;full_size=1
layout tall

# Kitty tab for Wing development
new_tab Wing
cd ~/Wing
launch zsh
enabled_layouts tall:bias=50;full_size=1
layout tall

# Kitty tab for Cheat Sheets
new_tab Help
cd ~/Documents/cheat-sheets-plus/kasm
launch --env PAGER="less -r" ranger --selectfile=workspaces.md
enabled_layouts tall:bias=50;full_size=1
layout tall

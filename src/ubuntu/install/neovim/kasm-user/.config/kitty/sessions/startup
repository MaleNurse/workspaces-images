# Kitty tabbed startup session
#
# Kitty tab with Neofetch
new_tab
launch --hold neofetch --kitty auto --source /home/kasm-user/.local/share/icons/hicolor/256x256/apps/neovim-hicontrast.png
enabled_layouts tall:bias=50;full_size=1
layout tall
#
# Kitty HOME tab
new_tab
launch zsh
enabled_layouts tall:bias=50;full_size=1
layout tall

# Kitty tab in Desktop folder
new_tab Desktop
cd ~/Desktop
launch --hold lsd --group-dirs first
launch center-active-window
enabled_layouts tall:bias=50;full_size=1
layout tall

# Kitty tab in Documents folder
new_tab Documents
cd ~/Documents
launch --hold lsd --group-dirs first
enabled_layouts tall:bias=50;full_size=1
layout tall

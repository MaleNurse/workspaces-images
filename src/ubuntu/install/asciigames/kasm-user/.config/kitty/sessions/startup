# Kitty tabbed startup session
#
# Kitty tab with Neofetch
new_tab
launch --hold neofetch --kitty auto --source /home/kasm-user/.local/share/icons/hicolor/256x256/apps/games.png
enabled_layouts tall:bias=50;full_size=1
layout tall

# Kitty tab for Games Menu
new_tab Games
launch zsh -c games_menu
launch center-active-window
enabled_layouts tall:bias=50;full_size=1
layout tall

# Kitty tab for Btop++
new_tab Btop
launch zsh -c btop
enabled_layouts tall:bias=50;full_size=1
layout tall

# Kitty tab for Cheat Sheets
new_tab Cheat Sheets
cd ~/Documents/cheat-sheets-plus
launch zsh -c ranger
enabled_layouts tall:bias=50;full_size=1
layout tall

new_tab Help
cd ~/.local/share/doc
launch zsh -c ranger
enabled_layouts tall:bias=50;full_size=1
layout tall
